<Window x:Class="Online_Meeting.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="LoginPage" Height="650" Width="1000" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Window.Resources>
        <!-- Style cho TextBox -->
        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="CaretBrush" Value="#2ECC71"/>
        </Style>

        <!-- Style cho PasswordBox -->
        <Style TargetType="PasswordBox" x:Key="ModernPasswordBox">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- Style cho Button chính -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#2ECC71" Offset="0"/>
                                    <GradientStop Color="#27AE60" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.3" Color="#2ECC71"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border" 
                                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                           To="20" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Social Button -->
        <Style TargetType="Button" x:Key="SocialButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8EAED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F9FA"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12">
        <Border.Background>
            <SolidColorBrush Color="#F5F7FA"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.4" Color="#2C3E50"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="480"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Branding -->
            <Grid Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3498DB" Offset="0"/>
                        <GradientStop Color="#2980B9" Offset="0.5"/>
                        <GradientStop Color="#2ECC71" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <!-- Decorative circles -->
                <Canvas>
                    <Ellipse Width="350" Height="350" Opacity="0.05" Canvas.Left="-120" Canvas.Top="-120">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#FFFFFF"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Width="250" Height="250" Opacity="0.08" Canvas.Right="-80" Canvas.Bottom="-80">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#FFFFFF"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Width="180" Height="180" Opacity="0.06" Canvas.Left="80" Canvas.Bottom="80">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#FFFFFF"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Canvas>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                    <Border CornerRadius="50" Width="120" Height="120" Padding="25">
                        <Border.Background>
                            <SolidColorBrush Color="#FFFFFF"/>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2" Color="#000000"/>
                        </Border.Effect>
                        <materialDesign:PackIcon Kind="VideoAccount" Width="70" Height="70" Foreground="#3498DB"/>
                    </Border>

                    <TextBlock Text="Xin chào!" Foreground="White" FontSize="42" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,30,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="Đăng nhập để tiếp tục" Foreground="White" FontSize="18" 
                               HorizontalAlignment="Center" Margin="0,10,0,0" Opacity="0.95" TextWrapping="Wrap" TextAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                        <Border CornerRadius="20" Padding="15,8" Margin="5" Opacity="0.9">
                            <Border.Background>
                                <SolidColorBrush Color="#FFFFFF"/>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ShieldCheck" Foreground="#3498DB" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Bảo mật" Foreground="#2C3E50" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <Border CornerRadius="20" Padding="15,8" Margin="5" Opacity="0.9">
                            <Border.Background>
                                <SolidColorBrush Color="#FFFFFF"/>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Nhanh chóng" Foreground="#2C3E50" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Features List -->
                    <StackPanel Margin="0,50,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border CornerRadius="25" Width="40" Height="40" Padding="8">
                                <Border.Background>
                                    <SolidColorBrush Color="#FFFFFF" Opacity="0.2"/>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Video" Foreground="White" Width="24" Height="24"/>
                            </Border>
                            <TextBlock Text="Họp video HD chất lượng cao" Foreground="White" FontSize="14" 
                                     VerticalAlignment="Center" Margin="15,0,0,0" Opacity="0.9"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border CornerRadius="25" Width="40" Height="40" Padding="8">
                                <Border.Background>
                                    <SolidColorBrush Color="#FFFFFF" Opacity="0.2"/>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="ShareVariant" Foreground="White" Width="24" Height="24"/>
                            </Border>
                            <TextBlock Text="Chia sẻ màn hình dễ dàng" Foreground="White" FontSize="14" 
                                     VerticalAlignment="Center" Margin="15,0,0,0" Opacity="0.9"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border CornerRadius="25" Width="40" Height="40" Padding="8">
                                <Border.Background>
                                    <SolidColorBrush Color="#FFFFFF" Opacity="0.2"/>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="AccountMultiple" Foreground="White" Width="24" Height="24"/>
                            </Border>
                            <TextBlock Text="Kết nối nhiều người cùng lúc" Foreground="White" FontSize="14" 
                                     VerticalAlignment="Center" Margin="15,0,0,0" Opacity="0.9"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Right Side - Login Form -->
            <Border Grid.Column="1" CornerRadius="0,12,12,0">
                <Border.Background>
                    <SolidColorBrush Color="White"/>
                </Border.Background>
                <Grid>
                    <!-- Close Button -->
                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" 
                            Width="35" Height="35" Background="Transparent" BorderThickness="0" 
                            Cursor="Hand" Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="#95A5A6"/>
                    </Button>

                    <Border Padding="60,80,60,40">
                        <StackPanel MaxWidth="360" VerticalAlignment="Center">
                            <TextBlock Text="Đăng nhập" FontSize="36" FontWeight="Bold" Foreground="#2C3E50" 
                                       HorizontalAlignment="Left" Margin="0,0,0,5"/>
                            <TextBlock Text="Chào mừng bạn trở lại!" FontSize="14" Foreground="#7F8C8D" 
                                       HorizontalAlignment="Left" Margin="0,0,0,35"/>

                            <!-- Username/Email -->
                            <TextBlock Text="Tên đăng nhập hoặc Email" FontSize="13" Foreground="#34495E" Margin="0,0,0,8" FontWeight="Medium"/>
                            <Border x:Name="borderUsername" BorderThickness="2" CornerRadius="8">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="#E8EAED"/>
                                </Border.BorderBrush>
                                <Border.Background>
                                    <SolidColorBrush Color="#F8F9FA"/>
                                </Border.Background>
                                <Grid>
                                    <materialDesign:PackIcon Kind="AccountCircle" Width="20" Height="20" Foreground="#95A5A6" 
                                                            VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                                    <TextBox x:Name="txtUsername" Style="{StaticResource ModernTextBox}" 
                                            Padding="45,14,15,14" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                                </Grid>
                            </Border>

                            <!-- Password -->
                            <TextBlock Text="Mật khẩu" FontSize="13" Foreground="#34495E" Margin="0,20,0,8" FontWeight="Medium"/>
                            <Border x:Name="borderPassword" BorderThickness="2" CornerRadius="8">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="#E8EAED"/>
                                </Border.BorderBrush>
                                <Border.Background>
                                    <SolidColorBrush Color="#F8F9FA"/>
                                </Border.Background>
                                <Grid>
                                    <materialDesign:PackIcon Kind="Lock" Width="20" Height="20" Foreground="#95A5A6" 
                                                            VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                                    <PasswordBox x:Name="txtPassword" Style="{StaticResource ModernPasswordBox}" 
                                                Padding="45,14,15,14" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
                                </Grid>
                            </Border>

                            <!-- Remember Me & Forgot Password -->
                            <Grid Margin="0,15,0,0">
                                <CheckBox x:Name="chkRememberMe" Content="Ghi nhớ đăng nhập" Foreground="#2C3E50" FontSize="13" 
                                         HorizontalAlignment="Left"/>
                                <Button Content="Quên mật khẩu?" Background="Transparent" Foreground="#3498DB" 
                                       BorderThickness="0" FontSize="13" FontWeight="SemiBold" Cursor="Hand" 
                                       Padding="0" HorizontalAlignment="Right" Click="ForgotPassword_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <ContentPresenter/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- Login Button -->
                            <Button Content="Đăng nhập" Style="{StaticResource PrimaryButton}" 
                                    Margin="0,30,0,0" Click="LoginButton_Click"/>

                            <!-- Divider -->
                            <Grid Margin="0,30,0,25">
                                <Separator VerticalAlignment="Center">
                                    <Separator.Background>
                                        <SolidColorBrush Color="#E8EAED"/>
                                    </Separator.Background>
                                </Separator>
                                <TextBlock Text="Hoặc đăng nhập với" Padding="12,0" 
                                          FontSize="12" Foreground="#95A5A6" HorizontalAlignment="Center">
                                    <TextBlock.Background>
                                        <SolidColorBrush Color="White"/>
                                    </TextBlock.Background>
                                </TextBlock>
                            </Grid>

                            <!-- Social Login -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Style="{StaticResource SocialButton}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Google" Width="20" Height="20" Foreground="#DB4437"/>
                                        <TextBlock Text="Google" Margin="8,0,0,0" Foreground="#2C3E50" FontSize="13" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="2" Style="{StaticResource SocialButton}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Microsoft" Width="20" Height="20" Foreground="#00A4EF"/>
                                        <TextBlock Text="Microsoft" Margin="8,0,0,0" Foreground="#2C3E50" FontSize="13" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Register Link -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                                <TextBlock Text="Chưa có tài khoản?" Foreground="#7F8C8D" FontSize="14"/>
                                <Button Content="Đăng ký ngay" Background="Transparent" Foreground="#2ECC71" 
                                       BorderThickness="0" FontSize="14" FontWeight="SemiBold" Cursor="Hand" 
                                       Padding="5,0" Click="RegisterButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <ContentPresenter/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>