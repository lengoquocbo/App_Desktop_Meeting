<Page x:Class="Online_Meeting.Client.Views.Pages.GroupChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Chat Groups"
      Background="#F5F7FA">

    <Page.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4A90E2"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2ECC71"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#95A5A6"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#E8F4FD"/>

        <!-- Button Styles -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="8"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="20,12"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5BA3F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GroupItemButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter Margin="15,12"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Groups List -->
        <Border Grid.Column="0" 
                Style="{StaticResource CardStyle}"
                Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" 
                        Padding="20,20,20,15"
                        BorderBrush="#F0F0F0"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Messages" 
                                      FontSize="26" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Stay connected with your teams" 
                                      FontSize="13"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                ToolTip="Create New Group"
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                Width="44"
                                Height="44"
                                Cursor="Hand"
                                Click="CreateGroupButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="22"
                                            Width="44"
                                            Height="44">
                                        <TextBlock Text="+" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Search Box -->
                <Border Grid.Row="1" Padding="15,15,15,10">
                    <Grid>
                        <Border Background="#F0F3F7"
                                CornerRadius="10"
                                Height="44">
                            <TextBox Background="Transparent"
                                    BorderThickness="0"
                                    Padding="40,12,12,12"
                                    FontSize="14"
                                    VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="🔍" 
                                  FontSize="18"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  Margin="12,0,0,0"
                                  IsHitTestVisible="False"/>
                    </Grid>
                </Border>

                <!-- Tabs -->
                <Border Grid.Row="2" Padding="15,5,15,10">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="All Chats"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,8,0"/>
                        <Button Content="Unread"
                                Background="#F0F3F7"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderThickness="0"
                                FontSize="13"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter Margin="16,8"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Groups List -->
                <ScrollViewer Grid.Row="3" 
                            VerticalScrollBarVisibility="Auto"
                            Padding="8,0,8,8">
                    <StackPanel x:Name="GroupsList">

                        <!-- Group Item 1 -->
                        <Button Style="{StaticResource GroupItemButton}"
                                Click="GroupItem_Click"
                                Tag="Team Marketing">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Border Grid.Column="0" 
                                       Width="56" 
                                       Height="56"
                                       CornerRadius="28"
                                       Background="#FF6B9D"
                                       Margin="0,0,12,0">
                                    <Grid>
                                        <TextBlock Text="TM" 
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        <Ellipse Width="14" Height="14"
                                                Fill="#2ECC71"
                                                Stroke="White"
                                                StrokeThickness="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Margin="0,0,2,2"/>
                                    </Grid>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" 
                                           VerticalAlignment="Center">
                                    <TextBlock Text="Team Marketing" 
                                              FontSize="15"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="Alice: Great work everyone! 👍" 
                                              FontSize="13"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              TextTrimming="CharacterEllipsis"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Badge & Time -->
                                <StackPanel Grid.Column="2" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="12,0,0,0">
                                    <TextBlock Text="10:30" 
                                              FontSize="11"
                                              FontWeight="Medium"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Right"/>
                                    <Border Background="#FF3B57"
                                           CornerRadius="10"
                                           Margin="0,6,0,0"
                                           HorizontalAlignment="Right">
                                        <TextBlock Text="3" 
                                                  FontSize="11"
                                                  Foreground="White"
                                                  FontWeight="Bold"
                                                  Margin="7,3"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- Group Item 2 -->
                        <Button Style="{StaticResource GroupItemButton}"
                                Click="GroupItem_Click"
                                Tag="Dev Team">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="56" 
                                       Height="56"
                                       CornerRadius="28"
                                       Background="#4A90E2"
                                       Margin="0,0,12,0">
                                    <TextBlock Text="DT" 
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Dev Team" 
                                              FontSize="15"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="John: Code review needed 🔍" 
                                              FontSize="13"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              TextTrimming="CharacterEllipsis"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                          Text="09:15" 
                                          FontSize="11"
                                          FontWeight="Medium"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </Button>

                        <!-- Group Item 3 -->
                        <Button Style="{StaticResource GroupItemButton}"
                                Click="GroupItem_Click"
                                Tag="Project Alpha">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="56" 
                                       Height="56"
                                       CornerRadius="28"
                                       Background="#9C27B0"
                                       Margin="0,0,12,0">
                                    <Grid>
                                        <TextBlock Text="PA" 
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        <Ellipse Width="14" Height="14"
                                                Fill="#2ECC71"
                                                Stroke="White"
                                                StrokeThickness="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Margin="0,0,2,2"/>
                                    </Grid>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Project Alpha" 
                                              FontSize="15"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="Sarah: Meeting at 2PM ⏰" 
                                              FontSize="13"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              TextTrimming="CharacterEllipsis"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                          Text="Yesterday" 
                                          FontSize="11"
                                          FontWeight="Medium"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </Button>

                        <!-- Group Item 4 -->
                        <Button Style="{StaticResource GroupItemButton}"
                                Click="GroupItem_Click"
                                Tag="Design Team">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="56" 
                                       Height="56"
                                       CornerRadius="28"
                                       Background="#FF9800"
                                       Margin="0,0,12,0">
                                    <TextBlock Text="DS" 
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Design Team" 
                                              FontSize="15"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="Mike: New mockups ready ✨" 
                                              FontSize="13"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              TextTrimming="CharacterEllipsis"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                          Text="2 days ago" 
                                          FontSize="11"
                                          FontWeight="Medium"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </Button>

                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>

        <!-- Right Panel - Chat/Empty State -->
        <Border Grid.Column="1" 
                Style="{StaticResource CardStyle}"
                Margin="10,0,0,0">
            <Grid>
                <!-- Empty State -->
                <Grid x:Name="EmptyChatState">
                    <StackPanel VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="40">
                        <Border Width="120" 
                                Height="120"
                                Background="{StaticResource HoverBrush}"
                                CornerRadius="60"
                                Margin="0,0,0,20">
                            <TextBlock Text="💬" 
                                       FontSize="60"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Select a conversation" 
                                  FontSize="22"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Choose a group from the list to start chatting" 
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"
                                  TextWrapping="Wrap"
                                  MaxWidth="300"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Chat Container (Hidden by default) -->
                <Grid x:Name="ChatContainer" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border Grid.Row="0" 
                       BorderBrush="#F0F0F0"
                       BorderThickness="0,0,0,1"
                       Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Group Info -->
                            <StackPanel Grid.Column="0" 
                                   Orientation="Horizontal">
                                <Border Width="48"
                                   Height="48"
                                   CornerRadius="24"
                                   Background="#FF6B9D"
                                   Margin="0,0,12,0">
                                    <TextBlock Text="TM" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="ChatHeaderTitle"
                                          Text="Team Marketing" 
                                          FontSize="17"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <Ellipse Width="8" Height="8"
                                            Fill="#2ECC71"
                                            Margin="0,0,6,0"
                                            VerticalAlignment="Center"/>
                                        <TextBlock Text="12 members • 5 online" 
                                              FontSize="12"
                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="2" 
                                   Orientation="Horizontal">
                                <Button Style="{StaticResource IconButton}"
                                   ToolTip="Voice Call"
                                   Content="📞"/>
                                <Button Style="{StaticResource IconButton}"
                                   ToolTip="Video Call"
                                   Content="📹"/>
                                <Button Style="{StaticResource IconButton}"
                                   ToolTip="Group Info"
                                   Content="ℹ️"
                                   Click="GroupInfoButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Messages Area -->
                    <Border Grid.Row="1" Background="#FAFBFC">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="24">
                                <TextBlock Text="Start a conversation with your team!"
                                      FontSize="14"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,20"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Message Input -->
                    <Border Grid.Row="2" 
                       BorderBrush="#F0F0F0"
                       BorderThickness="0,1,0,0"
                       Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                               Style="{StaticResource IconButton}"
                               ToolTip="Attach File"
                               Content="📎"/>

                            <Border Grid.Column="1"
                               Background="#F5F7FA"
                               CornerRadius="24"
                               Margin="8,0">
                                <TextBox x:Name="MessageInputBox"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    VerticalAlignment="Center"
                                    Margin="16,12"/>
                            </Border>

                            <StackPanel Grid.Column="2" 
                                   Orientation="Horizontal">
                                <Button Style="{StaticResource IconButton}"
                                   ToolTip="Emoji"
                                   Content="😊"/>
                                <Button Background="{StaticResource PrimaryBrush}"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Width="44"
                                   Height="44"
                                   Cursor="Hand"
                                   ToolTip="Send">
                               <!--  CHO NÀY BO ƠI  Click="SendMessageButton_Click" -->     
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                CornerRadius="22"
                                                Width="44"
                                                Height="44">
                                                <TextBlock Text="📤"
                                                      FontSize="20"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid> 
            </Grid>
        </Border>

    </Grid>
</Page>