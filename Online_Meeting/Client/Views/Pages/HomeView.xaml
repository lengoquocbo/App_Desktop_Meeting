<Page x:Class="Online_Meeting.Client.Views.Pages.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home">

    
    <Page.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4A90E2"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2ECC71"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#95A5A6"/>
        


        <!-- Button Styles -->
        <Style x:Key="MaterialDesignFlatButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MaterialDesignCircularProgressBar" TargetType="ProgressBar">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Value" Value="0"/>
            <Setter Property="IsIndeterminate" Value="True"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="TemplateRoot">
                            <Viewbox>
                                <Canvas Width="24" Height="24">
                                    <Path Stroke="{TemplateBinding Foreground}"
                                      StrokeThickness="3"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Data="M12,2 A10,10 0 1 1 2,12"
                                      RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" 
                                                         Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="MaterialDesignIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Welcome Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Good Morning, User!" 
                          FontSize="32" 
                          FontWeight="Bold"
                          Margin="0,0,0,5"/>
                <TextBlock Text="Ready to connect with your team?" 
                          FontSize="16"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>

            <!-- Quick Action Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Start Meeting Card -->
                <Border Grid.Column="0"
                        Style="{StaticResource CardStyle}"
                        Padding="30"
                        Margin="0,0,15,0"
                        Background="{StaticResource PrimaryBrush}"
                        Cursor="Hand"
                        MouseLeftButtonDown="StartMeetingCard_Click">
                    <StackPanel>
                        <TextBlock Text="📹" 
                                   FontSize="48"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="Start Meeting" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Create a new video meeting room" 
                                  FontSize="14"
                                  Foreground="White"
                                  Opacity="0.8"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Join Meeting Card -->
                <Border Grid.Column="1"
                        Style="{StaticResource CardStyle}"
                        Padding="30"
                        Margin="7.5,0"
                        Background="{StaticResource AccentBrush}"
                        Cursor="Hand"
                        MouseLeftButtonDown="JoinMeetingCard_Click">
                    <StackPanel>
                        <TextBlock Text="🚪" 
                                   FontSize="48"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="Join Meeting" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Enter a meeting code to join" 
                                  FontSize="14"
                                  Foreground="White"
                                  Opacity="0.8"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Schedule Meeting Card -->
                <Border Grid.Column="2"
                        Style="{StaticResource CardStyle}"
                        Padding="30"
                        Margin="15,0,0,0"
                        Background="#FF6200"
                        Cursor="Hand"
                        MouseLeftButtonDown="ScheduleMeetingCard_Click">
                    <StackPanel>
                        <TextBlock Text="📅" 
                                   FontSize="48"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="Schedule" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Plan a meeting for later" 
                                  FontSize="14"
                                  Foreground="White"
                                  Opacity="0.8"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </Grid>

            <!-- Recent Activity -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Meetings -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="25" Margin="0,0,15,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Recent Meetings" FontSize="20" FontWeight="Bold"/>

                            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" 
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Width="20" Height="20" HorizontalAlignment="Right" Margin="0,0,300,0"
                                 Visibility="Collapsed"/>

                            <Button Content="View All" Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalAlignment="Right" Foreground="{StaticResource PrimaryBrush}"/>
                        </Grid>

                        <ItemsControl x:Name="RecentMeetingsList">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ItemsControl.Template>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Margin="0,0,15,0">
                                                <Ellipse Width="50" Height="50" Fill="{StaticResource PrimaryBrush}" Opacity="0.1"/>
                                                <TextBlock Text="{Binding AvatarChar}" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold" FontSize="20"/>
                                            </Grid>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding RoomName}" FontSize="16" FontWeight="SemiBold"/>

                                                <TextBlock Text="{Binding SubtitleInfo}" 
                                                   FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,3,0,0"/>
                                            </StackPanel>

                                            
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel x:Name="EmptyStatePanel" Visibility="Collapsed"
                            VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,40">
                            <TextBlock Text="📹" FontSize="80" Opacity="0.3" HorizontalAlignment="Center"/>
                            <TextBlock Text="Chưa có cuộc họp nào gần đây" FontSize="16" Opacity="0.5" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Upcoming Schedule -->
                <Border Grid.Column="1"
                        Style="{StaticResource CardStyle}"
                        Padding="25"
                        Margin="15,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Today's Schedule" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,20"/>

                        <!-- Calendar Widget -->
                        <Calendar SelectionMode="SingleDate"
                                 Margin="0,0,0,20"
                                 HorizontalAlignment="Center"/>

                        <!-- Upcoming Events -->
                        <StackPanel>
                            <Border Background="#F5F5F5"
                                   Padding="15"
                                   CornerRadius="8"
                                   Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="10:00 AM" 
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="Team Meeting" 
                                              FontSize="14"
                                              Margin="0,5,0,0"/>
                                    <TextBlock Text="Room: DEV-001" 
                                              FontSize="12"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#F5F5F5"
                                   Padding="15"
                                   CornerRadius="8"
                                   Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="2:00 PM" 
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="Client Review" 
                                              FontSize="14"
                                              Margin="0,5,0,0"/>
                                    <TextBlock Text="Room: CLIENT-05" 
                                              FontSize="12"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>

                    </StackPanel>
                </Border>

            </Grid>

        </Grid>
    </ScrollViewer>
</Page>