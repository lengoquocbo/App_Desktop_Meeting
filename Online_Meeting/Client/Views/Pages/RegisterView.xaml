<Page x:Class="Online_Meeting.Client.Views.Pages.RegisterView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Register" Background="#F5F7FA">

    <Page.Resources>
        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DFE4EA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="CaretBrush" Value="#3498DB"/>
        </Style>

        <Style TargetType="PasswordBox" x:Key="ModernPasswordBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DFE4EA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="480"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Branding -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#34495E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="60">
                <!-- Icon -->
                <Border Width="100" Height="100" CornerRadius="20" Background="White" 
                        HorizontalAlignment="Center" Padding="20">
                    <materialDesign:PackIcon Kind="AccountPlus" Width="60" Height="60" 
                                           Foreground="#3498DB"/>
                </Border>

                <TextBlock Text="Tham gia cùng chúng tôi!" Foreground="White" FontSize="32"
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                <TextBlock Text="Tạo tài khoản để bắt đầu" Foreground="White"
                           FontSize="16" TextAlignment="Center" Opacity="0.85" Margin="0,10,0,0"/>

                <!-- Features -->
                <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" 
                                               Foreground="#2ECC71" VerticalAlignment="Center"/>
                        <TextBlock Text="Miễn phí 100%" Foreground="White" 
                                   FontSize="14" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" 
                                               Foreground="#2ECC71" VerticalAlignment="Center"/>
                        <TextBlock Text="Bảo mật P2P" Foreground="White" 
                                   FontSize="14" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" 
                                               Foreground="#2ECC71" VerticalAlignment="Center"/>
                        <TextBlock Text="Dễ sử dụng" Foreground="White" 
                                   FontSize="14" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>


        <!-- Right Side - Register Form -->
        <Border Grid.Column="1" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" Margin="50,40" MaxWidth="380">
                    <!-- Header -->
                    <TextBlock Text="Đăng ký" FontSize="28" FontWeight="Bold" 
                               Foreground="#2C3E50" Margin="0,0,0,8"/>
                    <TextBlock Text="Điền thông tin để tạo tài khoản" FontSize="14" 
                               Foreground="#7F8C8D" Margin="0,0,0,30"/>

                    <!-- Username Field -->
                    <TextBlock Text="Tên đăng nhập" FontSize="13" Foreground="#2C3E50"
                               FontWeight="Medium" Margin="0,0,0,8"/>
                    <Border BorderThickness="1" CornerRadius="6" BorderBrush="#DFE4EA" 
                            Background="White" Margin="0,0,0,15">
                        <Grid>
                            <materialDesign:PackIcon Kind="Account" Width="18" Height="18" 
                                                     Foreground="#95A5A6"
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Left" Margin="12,0,0,0"/>
                            <TextBox x:Name="txtUsername" Style="{StaticResource ModernTextBox}" 
                                     Padding="40,10,12,10" BorderThickness="0"/>
                        </Grid>
                    </Border>

                    <!-- Email Field -->
                    <TextBlock Text="Email" FontSize="13" Foreground="#2C3E50"
                               FontWeight="Medium" Margin="0,0,0,8"/>
                    <Border BorderThickness="1" CornerRadius="6" BorderBrush="#DFE4EA" 
                            Background="White" Margin="0,0,0,15">
                        <Grid>
                            <materialDesign:PackIcon Kind="Email" Width="18" Height="18" 
                                                     Foreground="#95A5A6"
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Left" Margin="12,0,0,0"/>
                            <TextBox x:Name="txtEmail" Style="{StaticResource ModernTextBox}" 
                                     Padding="40,10,12,10" BorderThickness="0"/>
                        </Grid>
                    </Border>

                    <!-- Password Field -->
                    <TextBlock Text="Mật khẩu" FontSize="13" Foreground="#2C3E50"
                               FontWeight="Medium" Margin="0,0,0,8"/>
                    <Border BorderThickness="1" CornerRadius="6" BorderBrush="#DFE4EA" 
                            Background="White" Margin="0,0,0,15">
                        <Grid>
                            <materialDesign:PackIcon Kind="Lock" Width="18" Height="18" 
                                                     Foreground="#95A5A6"
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Left" Margin="12,0,0,0"/>
                            <PasswordBox x:Name="txtPassword" Style="{StaticResource ModernPasswordBox}" 
                                         Padding="40,10,12,10" BorderThickness="0"/>
                        </Grid>
                    </Border>

                    <!-- Confirm Password Field -->
                    <TextBlock Text="Xác nhận mật khẩu" FontSize="13" Foreground="#2C3E50"
                               FontWeight="Medium" Margin="0,0,0,8"/>
                    <Border BorderThickness="1" CornerRadius="6" BorderBrush="#DFE4EA" 
                            Background="White" Margin="0,0,0,20">
                        <Grid>
                            <materialDesign:PackIcon Kind="LockCheck" Width="18" Height="18" 
                                                     Foreground="#95A5A6"
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Left" Margin="12,0,0,0"/>
                            <PasswordBox x:Name="txtConfirmPassword" Style="{StaticResource ModernPasswordBox}" 
                                         Padding="40,10,12,10" BorderThickness="0"/>
                        </Grid>
                    </Border>
                    <CheckBox x:Name="chkTerms"
          Content="Tôi đồng ý với điều khoản sử dụng"
          Margin="0,10,0,0"/>

                    <!-- Register Button -->
                    <Button Content="Đăng ký" Style="{StaticResource PrimaryButton}"
                            Width="380" HorizontalAlignment="Stretch" Margin="0,0,0,15"
                            Click="RegisterButton_Click" Height="44"/>

                    <!-- Login Link -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="Đã có tài khoản?" Foreground="#7F8C8D" FontSize="13"/>
                        <Button Content="Đăng nhập ngay" Background="Transparent" Foreground="#3498DB"
                                BorderThickness="0" FontSize="13" FontWeight="SemiBold" Cursor="Hand"
                                Padding="5,0" Click="LoginButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
