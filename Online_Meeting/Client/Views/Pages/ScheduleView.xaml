<Page x:Class="Online_Meeting.Client.Views.Pages.ScheduleView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Online_Meeting.Client.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="ScheduleView"
      Background="#F5F7FA">
    <Page.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
            <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#1D4ED8"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1F2937"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>

            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.05" Color="Black" Direction="270"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="MaterialDesignRaisedButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    SnapsToDevicePixels="True">
                                <ContentPresenter x:Name="contentPresenter" 
                                                  Focusable="False" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  RecognizesAccessKey="True"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                                    <Setter Property="Foreground" Value="#9CA3AF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ScrollViewer">
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            </Style>

            <Style TargetType="Calendar">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,30,0">

            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    Height="50"
                    Margin="0,0,0,25"
                    Click="BtnCreateSchedule_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="+" FontSize="24" FontWeight="Bold" Margin="0,0,10,2" VerticalAlignment="Center"/>
                    <TextBlock Text="Tạo Lịch Mới" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Border Style="{StaticResource CardStyle}" Padding="10">
                <Viewbox Stretch="Uniform">
                    <Calendar x:Name="MainCalendar" 
                              SelectionMode="SingleDate"
                              SelectedDatesChanged="MainCalendar_SelectedDateChanged"/>
                </Viewbox>
            </Border>

            <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,25,0,0">
                <StackPanel>
                    <TextBlock Text="Thống kê tháng" 
                               Foreground="{StaticResource TextPrimaryBrush}" 
                               FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                    <Grid Margin="0,8">
                        <TextBlock Text="Sắp diễn ra" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="12" FontWeight="Bold" HorizontalAlignment="Right" Foreground="{StaticResource PrimaryBrush}"/>
                    </Grid>
                    <Separator Background="#F3F4F6" Margin="0,5"/>

                    <Grid Margin="0,8">
                        <TextBlock Text="Đã hoàn thành" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="34" FontWeight="Bold" HorizontalAlignment="Right" Foreground="#10B981"/>
                    </Grid>
                    <Separator Background="#F3F4F6" Margin="0,5"/>

                    <Grid Margin="0,8">
                        <TextBlock Text="Đã hủy" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="2" FontWeight="Bold" HorizontalAlignment="Right" Foreground="#EF4444"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock x:Name="TxtSelectedDate" 
                           Text="Hôm nay, ..." 
                           FontSize="26" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock x:Name="TxtMeetingCount"
                           Text="Đang tải..." 
                           FontSize="15" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1">
                <StackPanel>
                    <ItemsControl x:Name="ScheduleList" ItemsSource="{Binding CurrentDayMeetings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        CornerRadius="12" 
                                        Margin="0,0,5,15"
                                        Height="100">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05" Color="#000"/>
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="6"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="{Binding StatusColor}" 
                                                CornerRadius="12,0,0,12" HorizontalAlignment="Stretch"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding StartTime, StringFormat=HH:mm}" 
                                                       FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding EndTime, StringFormat=HH:mm}" 
                                                       FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Rectangle Grid.Column="1" HorizontalAlignment="Right" Width="1" Fill="#F3F4F6" Margin="0,15"/>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0">
                                            <TextBlock Text="{Binding Title}" 
                                                       FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Background="#EEF2FF" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                                                    <TextBlock Text="{Binding Type}" FontSize="11" FontWeight="Medium" Foreground="{StaticResource PrimaryBrush}"/>
                                                </Border>

                                                <TextBlock Text="ID: " FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding MeetingIdDisplay}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Button Grid.Column="3"
                                                Content="Join"
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                Height="36" Width="80"
                                                Margin="0,0,25,0"
                                                Visibility="{Binding IsJoinable, Converter={StaticResource BoolToVis}}"
                                                Click="BtnJoin_Click"
                                                Tag="{Binding RoomKey}">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="18"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel x:Name="EmptyState" Visibility="Collapsed" Margin="0,60,0,0">
                        <TextBlock Text="📅" FontSize="60" HorizontalAlignment="Center" Opacity="0.2"/>
                        <TextBlock Text="Không có lịch họp nào" 
                                   FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center" Margin="0,15,0,5"/>
                        <TextBlock Text="Hãy chọn một ngày khác hoặc tạo lịch mới" 
                                   FontSize="14" Foreground="#9CA3AF" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>