<Window x:Class="Online_Meeting.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="RegisterPage" Height="700" Width="1100" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Window.Resources>
        <!-- Style cho TextBox với animation -->
        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="CaretBrush" Value="#2ECC71"/>
        </Style>

        <!-- Style cho PasswordBox -->
        <Style TargetType="PasswordBox" x:Key="ModernPasswordBox">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- Style cho Button chính với gradient -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#2ECC71" Offset="0"/>
                                    <GradientStop Color="#27AE60" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.3" Color="#2ECC71"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border" 
                                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                           To="20" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Social Button -->
        <Style TargetType="Button" x:Key="SocialButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8EAED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F9FA"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12">
        <Border.Background>
            <SolidColorBrush Color="#F5F7FA"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.4" Color="#2C3E50"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="520"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Enhanced Branding -->
            <Grid Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1ABC9C" Offset="0"/>
                        <GradientStop Color="#16A085" Offset="0.5"/>
                        <GradientStop Color="#27AE60" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <!-- Decorative circles -->
                <Canvas>
                    <Ellipse Width="300" Height="300" Opacity="0.05" Canvas.Left="-100" Canvas.Top="-100">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#FFFFFF"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Width="200" Height="200" Opacity="0.08" Canvas.Right="-50" Canvas.Bottom="-50">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#FFFFFF"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Width="150" Height="150" Opacity="0.06" Canvas.Left="100" Canvas.Bottom="50">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#FFFFFF"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Canvas>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                    <Border CornerRadius="50" Width="120" Height="120" Padding="25">
                        <Border.Background>
                            <SolidColorBrush Color="#FFFFFF"/>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2" Color="#000000"/>
                        </Border.Effect>
                        <materialDesign:PackIcon Kind="AccountPlus" Width="70" Height="70" Foreground="#2ECC71"/>
                    </Border>

                    <TextBlock Text="Chào mừng bạn!" Foreground="White" FontSize="42" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,30,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="Khám phá trải nghiệm họp trực tuyến" Foreground="White" FontSize="18" 
                               HorizontalAlignment="Center" Margin="0,10,0,0" Opacity="0.95" TextWrapping="Wrap" TextAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                        <Border CornerRadius="20" Padding="15,8" Margin="5" Opacity="0.9">
                            <Border.Background>
                                <SolidColorBrush Color="#FFFFFF"/>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Check" Foreground="#2ECC71" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Miễn phí" Foreground="#2C3E50" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <Border CornerRadius="20" Padding="15,8" Margin="5" Opacity="0.9">
                            <Border.Background>
                                <SolidColorBrush Color="#FFFFFF"/>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Check" Foreground="#2ECC71" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Bảo mật" Foreground="#2C3E50" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Right Side - Register Form -->
            <Border Grid.Column="1" CornerRadius="0,12,12,0">
                <Border.Background>
                    <SolidColorBrush Color="White"/>
                </Border.Background>
                <Grid>
                    <!-- Close Button -->
                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" 
                            Width="35" Height="35" Background="Transparent" BorderThickness="0" 
                            Cursor="Hand" Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="#95A5A6"/>
                    </Button>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,50,0,0">
                        <Border Padding="60,20,60,40">
                            <StackPanel MaxWidth="380">
                                <TextBlock Text="Tạo tài khoản" FontSize="32" FontWeight="Bold" Foreground="#2C3E50" 
                                           HorizontalAlignment="Left" Margin="0,0,0,5"/>
                                <TextBlock Text="Điền thông tin để bắt đầu" FontSize="14" Foreground="#7F8C8D" 
                                           HorizontalAlignment="Left" Margin="0,0,0,30"/>

                                <!-- Full Name -->
                                <TextBlock Text="Họ và tên" FontSize="13" Foreground="#34495E" Margin="0,0,0,8" FontWeight="Medium"/>
                                <Border x:Name="borderFullName" BorderThickness="2" CornerRadius="8">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="#E8EAED"/>
                                    </Border.BorderBrush>
                                    <Border.Background>
                                        <SolidColorBrush Color="#F8F9FA"/>
                                    </Border.Background>
                                    <Grid>
                                        <materialDesign:PackIcon Kind="Account" Width="20" Height="20" Foreground="#95A5A6" 
                                                                VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                                        <TextBox x:Name="txtFullName" Style="{StaticResource ModernTextBox}" 
                                                Padding="45,14,15,14" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                                    </Grid>
                                </Border>

                                <!-- Username -->
                                <TextBlock Text="Tên đăng nhập" FontSize="13" Foreground="#34495E" Margin="0,18,0,8" FontWeight="Medium"/>
                                <Border x:Name="borderUsername" BorderThickness="2" CornerRadius="8">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="#E8EAED"/>
                                    </Border.BorderBrush>
                                    <Border.Background>
                                        <SolidColorBrush Color="#F8F9FA"/>
                                    </Border.Background>
                                    <Grid>
                                        <materialDesign:PackIcon Kind="AccountCircle" Width="20" Height="20" Foreground="#95A5A6" 
                                                                VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                                        <TextBox x:Name="txtUsername" Style="{StaticResource ModernTextBox}" 
                                                Padding="45,14,15,14" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                                    </Grid>
                                </Border>

                                <!-- Email -->
                                <TextBlock Text="Email" FontSize="13" Foreground="#34495E" Margin="0,18,0,8" FontWeight="Medium"/>
                                <Border x:Name="borderEmail" BorderThickness="2" CornerRadius="8">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="#E8EAED"/>
                                    </Border.BorderBrush>
                                    <Border.Background>
                                        <SolidColorBrush Color="#F8F9FA"/>
                                    </Border.Background>
                                    <Grid>
                                        <materialDesign:PackIcon Kind="Email" Width="20" Height="20" Foreground="#95A5A6" 
                                                                VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                                        <TextBox x:Name="txtEmail" Style="{StaticResource ModernTextBox}" 
                                                Padding="45,14,15,14" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                                    </Grid>
                                </Border>

                                <!-- Password -->
                                <TextBlock Text="Mật khẩu" FontSize="13" Foreground="#34495E" Margin="0,18,0,8" FontWeight="Medium"/>
                                <Border x:Name="borderPassword" BorderThickness="2" CornerRadius="8">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="#E8EAED"/>
                                    </Border.BorderBrush>
                                    <Border.Background>
                                        <SolidColorBrush Color="#F8F9FA"/>
                                    </Border.Background>
                                    <Grid>
                                        <materialDesign:PackIcon Kind="Lock" Width="20" Height="20" Foreground="#95A5A6" 
                                                                VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                                        <PasswordBox x:Name="txtPassword" Style="{StaticResource ModernPasswordBox}" 
                                                    Padding="45,14,15,14" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
                                    </Grid>
                                </Border>

                                <!-- Confirm Password -->
                                <TextBlock Text="Xác nhận mật khẩu" FontSize="13" Foreground="#34495E" Margin="0,18,0,8" FontWeight="Medium"/>
                                <Border x:Name="borderConfirmPassword" BorderThickness="2" CornerRadius="8">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="#E8EAED"/>
                                    </Border.BorderBrush>
                                    <Border.Background>
                                        <SolidColorBrush Color="#F8F9FA"/>
                                    </Border.Background>
                                    <Grid>
                                        <materialDesign:PackIcon Kind="LockCheck" Width="20" Height="20" Foreground="#95A5A6" 
                                                                VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                                        <PasswordBox x:Name="txtConfirmPassword" Style="{StaticResource ModernPasswordBox}" 
                                                    Padding="45,14,15,14" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
                                    </Grid>
                                </Border>

                                <!-- Terms & Conditions -->
                                <CheckBox x:Name="chkTerms" Margin="0,20,0,0" Foreground="#2C3E50" FontSize="13">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="Tôi đồng ý với "/>
                                        <Hyperlink Foreground="#2ECC71" Click="Terms_Click" TextDecorations="None">
                                            <Run Text="Điều khoản" FontWeight="SemiBold"/>
                                        </Hyperlink>
                                        <Run Text=" và "/>
                                        <Hyperlink Foreground="#2ECC71" Click="Privacy_Click" TextDecorations="None">
                                            <Run Text="Chính sách" FontWeight="SemiBold"/>
                                        </Hyperlink>
                                    </TextBlock>
                                </CheckBox>

                                <!-- Register Button -->
                                <Button Content="Tạo tài khoản" Style="{StaticResource PrimaryButton}" 
                                        Margin="0,25,0,0" Click="RegisterButton_Click"/>

                                <!-- Divider -->
                                <Grid Margin="0,25,0,20">
                                    <Separator VerticalAlignment="Center">
                                        <Separator.Background>
                                            <SolidColorBrush Color="#E8EAED"/>
                                        </Separator.Background>
                                    </Separator>
                                    <TextBlock Text="Hoặc đăng ký với" Padding="12,0" 
                                              FontSize="12" Foreground="#95A5A6" HorizontalAlignment="Center">
                                        <TextBlock.Background>
                                            <SolidColorBrush Color="White"/>
                                        </TextBlock.Background>
                                    </TextBlock>
                                </Grid>

                                <!-- Social Register -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Style="{StaticResource SocialButton}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Google" Width="20" Height="20" Foreground="#DB4437"/>
                                            <TextBlock Text="Google" Margin="8,0,0,0" Foreground="#2C3E50" FontSize="13" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Grid.Column="2" Style="{StaticResource SocialButton}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Microsoft" Width="20" Height="20" Foreground="#00A4EF"/>
                                            <TextBlock Text="Microsoft" Margin="8,0,0,0" Foreground="#2C3E50" FontSize="13" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!-- Login Link -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                                    <TextBlock Text="Đã có tài khoản?" Foreground="#7F8C8D" FontSize="14"/>
                                    <Button Content="Đăng nhập ngay" Background="Transparent" Foreground="#2ECC71" 
                                           BorderThickness="0" FontSize="14" FontWeight="SemiBold" Cursor="Hand" 
                                           Padding="5,0" Click="LoginButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <ContentPresenter/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>