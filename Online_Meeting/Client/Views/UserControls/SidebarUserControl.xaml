            <TextBlock Text="ONLINE MEETING"
                       Foreground="White" FontWeight="Bold" FontSize="18"
                       HorizontalAlignment="Center" Margin="0,20"/>
            <Separator Margin="0,10"/>
            <Button Content="🏠 Trang chủ" Margin="0,5"/>
            <Button Content="💬 Chat" Margin="0,5"/>
            <Button Content="📹 Cuộc họp" Margin="0,5"/>
            <Button Content="⚙️ Cài đặt" Margin="0,5"/>
